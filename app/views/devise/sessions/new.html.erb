<div class="container col-md-4 col-xs-4">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, "Email Address", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Password", class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field form-check">
            <label class="form-check-label" for="user_remember_me">
              <input type="checkbox" class="form-check-input" name="user[remember_me]" id="user_remember_me">
              Remember Me
            </label>
          </div>
      <% end -%>

      <div class="actions form-group">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
