<div class="col-md-8 offset-md-2">
  <h1 style="padding-bottom: 1em;">Emotions</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Emotion</th>
        <th>Severity</th>
        <th>Entered At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @emotions.each do |emotion| %>
        <tr>
          <td><%= emotion.emotion_type.name %></td>
          <td><%= emotion.emotion_severity.name %></td>
          <td><%= format_date(emotion.created_at) %></td>
          <td>
            <%= link_to "View", emotion_path(emotion) %> |
            <%= link_to "Edit", edit_emotion_path(emotion) %> |
            <%= link_to "Delete", emotion_path(emotion), method: :delete  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div style="padding-top: 1.5em;">
    <%= link_to "Add Another", new_emotion_path, class: "btn btn-success" %>
  </div>
</div>