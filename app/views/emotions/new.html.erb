<div class="col-md-8 offset-md-2">
  <h1>Here is a form to enter your emotion:</h1>

  <%= form_for @emotion, url: {action: "create"}, html: {class: "emotion_form"} do |f| %>
      <div class="form-group">
        <%= f.label :emotion_severity, "Emotion Severity", class: "form-label" %>
        <%= f.select :emotion_severity, EmotionSeverity.all.collect {|p| [ p.name, p.id ] }, {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :emotion_type, "Emotion Type", class: "form-label" %>
        <%= f.select :emotion_type, EmotionType.all.collect {|p| [ p.name, p.id ] }, {}, { class: "form-control" } %>
      </div>

      <%= f.hidden_field :user_id, value: @user.id %>

      <div class="actions form-group">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
