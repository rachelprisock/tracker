<div>
  <ul>
    <% if @life_event.errors %>
        <% @life_event.errors.each do |error| %>
            <li><%= error %></li>
        <% end %>
    <% end %>
  </ul>
</div>

<div class="col-md-5">
  <%= form_for @life_event, html: {class: "life_event_form"} do |f| %>
      <div class="form-group">
        <p class="lead">What aspect of life?</p>
        <%= f.select :life_event_type_id, LifeEventType.all.collect {|p| [ p.name, p.id ] }, {selected: @life_event.life_event_type_id}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <p class="lead">Name this life event:</p>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <p class="lead">How would you describe it?</p>
        <%= f.text_area :description, rows: 3, class: "form-control", required: true %>
      </div>

      <%= f.hidden_field :user_id, value: @user.id %>

      <div class="actions form-group">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>