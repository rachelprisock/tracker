<div class="col-md-8 offset-md-2 col-8 offset-xs-2">
  <h1 style="padding-bottom: 1em;">Habit Types</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @habit_types.each do |habit_type| %>
        <tr>
          <td><%= habit_type.name %></td>
          <td>
            <%= link_to "Edit", edit_habit_type_path(habit_type) %> |
            <%= link_to "Delete", habit_type_path(habit_type), method: :delete  %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div style="padding-top: 1.5em;">
    <%= link_to "Add Another", new_habit_type_path, class: "btn btn-success" %>
  </div>
</div>